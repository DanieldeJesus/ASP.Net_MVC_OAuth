<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <Link href="../Content/toastr.css" rel="stylesheet" />
    <!-- Bootstrap Core CSS -->
    <link href="../Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="../Content/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="../Content/dist/css/sb-admin-2.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="../Content/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <link href="../Content/themes/base/jquery-ui.min.css" rel="stylesheet">
    <link href="../Content/datepicker.css" rel="stylesheet">

    <script src="../Content/vendor/jquery/jquery.min.js"></script>
    <script src="../Content/js/toastr.js"></script>
    <script src="../Content/js/date.format.js"></script>
    <script src="../Content/js/jquery.mask.js"></script>

    <script>
        // Toast message
        $(function () {
            var displayMessage = function (message, msgType) {
                toastr.options = {
                    "closeButton": true,
                    "debug": false,
                    "newestOnTop": false,
                    "progressBar": true,
                    "positionClass": "toast-top-right",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "5000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                };
                toastr[msgType](message);
            };

            if ($('#success').val()) {
                displayMessage($('#success').val(), 'success');
            }
            if ($('#info').val()) {
                displayMessage($('#info').val(), 'info');
            }
            if ($('#warning').val()) {
                displayMessage($('#warning').val(), 'warning');
            }
            if ($('#error').val()) {
                displayMessage($('#error').val(), 'error');
            }
        });

    </script>

</head>
<body>
    <div id="wrapper">
        @if (Request.IsAuthenticated)
        {
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <ul class="nav navbar-top-links navbar-right">
                    <li class="dropdown">
                        @Html.Partial("_LoginPartial")
                    </li>
                </ul>
                <div class="navbar-default sidebar" role="navigation">
                    <div class="profile-userpic">
                        <img src="../Content/images/default-user.png" class="img-responsive" alt="">
                    </div>
                    <!-- END SIDEBAR USERPIC -->
                    <!-- SIDEBAR USER TITLE -->
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name">
                            @if (Session["usuario_logado"] != null)
                            {
                                @Session["usuario_logado"].ToString()
                            }
                        </div>
                        <div class="profile-usertitle-job">
                            @if (Session["login"] != null)
                            {
                                @Session["login"].ToString()                            }

                        </div>
                    </div>
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">
                            <li>
                                <a class="nav-link" href="@Url.Action("Index", "Home")" action="@Url.Action("Index", "Home")"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-edit fa-fw"></i> Cadastros<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        <a class="nav-link" href="@Url.Action("Index", "Cliente")" action="@Url.Action("Index", "Cliente")"> Clientes</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-shield fa-fw"></i> Segurança<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        <a class="nav-link" href="@Url.Action("Index", "Usuario")" action="@Url.Action("Index", "Usuario")"> Usuários</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
        else
        {
            <div class="alert alert-info" style="text-align:center">
                <i class="fa fa-exclamation-triangle" style="color:orangered;"></i> Logar no sistema. <a href="@Url.Action("Index", "Login")" class="alert-link">Logar aqui</a>.
            </div>
        }

        @RenderBody()
    </div>

    <!-- Toast Message -->
    <input type="hidden" id="success"
           value="@TempData["success"]" />
    <input type="hidden" id="info"
           value="@TempData["info"]" />
    <input type="hidden" id="warning"
           value="@TempData["warning"]" />
    <input type="hidden" id="error"
           value="@TempData["error"]" />

    <!-- Bootstrap Core JavaScript -->
    <script src="../Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="../Content/vendor/metisMenu/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="../Content/dist/js/sb-admin-2.js"></script>
    <script src="../Content/js/jquery-ui-1.12.1/jquery-ui.min.js"></script>

</body>
</html>
